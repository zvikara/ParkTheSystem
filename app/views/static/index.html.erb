<!doctype html>
<html lang="en" ng-app="ticket">
<head>
  <meta charset="UTF-8" />
  <title>Park The System</title>
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <link rel="stylesheet" type="text/css" href="css/bootstrap.css" />
  <link rel="stylesheet" type="text/css" href="css/main.css" />
</head>
<body ng-controller="Ticket">
  
  <div class="container">

    <div class="masthead">
      <img id="logo" src="img/park_the_system_logo_32.png" class="pull-left "/>
      <h3 class="muted">Park The System</h3>
      <div class="navbar">
        <div class="navbar-inner">
          <div class="container">
            <ul class="nav">
              <li class="active"><a href="#">Home</a></li>
              <li><a href="#">Tickets</a></li>
              <li><a href="#">Services</a></li>
              <li><a href="#">Downloads</a></li>
              <li><a href="#">About</a></li>
              <li><a href="#">Contact</a></li>
            </ul>
          </div>
        </div>
      </div><!-- /.navbar -->
    </div>
    
    <div class="row">
      <div class="span4">
        <form ng-submit="addTicket()" class="well">
          
          <label for="name">Your name: </label>
          <input id="name" type="text" ng-model="name" />

          <label for="email">Your email: </label>
          <input id="email" type="email" ng-model="email" />

          <label for="date">Ticket date: </label>
          <input id="date" type="text" ng-model="date" placeholder="Ticket date..." />
          
          <label for="number">Ticket number: </label>
          <input id="number" type="text" ng-model="number" placeholder="Ticket number..." />
          
          <label for="car">Car number: </label>
          <input id="car" type="text" ng-model="car" placeholder="Car number..." />
          
          <label for="reason">Reason: </label>
          <input type="radio" ng-model="reason" value="Missing payment"> Missing payment <br/>
          <input type="radio" ng-model="reason" value="No parking zone"> No parking zone <br/>
          <input type="radio" ng-model="reason" value="Handicapped zone"> Handicapped zone <br/>
          
          <label for="city">City: </label>
          <input id="city" type="text" ng-model="city" placeholder="City..." />
          
          <label for="latitude">Latitude: </label>
          <input id="latitude" type="text" ng-model="latitude" placeholder="Latitude..." />
          
          <label for="longitude">Longitude: </label>
          <input id="longitude" type="text" ng-model="longitude" placeholder="Longitude..." />
          
          <label for="total">Total charge: </label>
          <input id="total" type="text" ng-model="total" placeholder="Ticket total charge..." />
          
          <label for="description">Description: </label>
          <textarea id="description" rows="3" ng-model="description" placeholder="Description..."></textarea>
          
          <input id="send" type="submit" id="submit" value="Send" class="btn btn-primary btn-large" />
          
        </form>
      </div><!-- /.span4 -->
      
      <div class="span8">
        <google-map center="center" draggable="true" zoom="zoom" markers="markers" mark-click="true"></google-map>
        <table class="table table-striped">
          <thead>
            <tr>
              <th>date</th>
              <th>name</th>
              <th>ticket id</th>
              <th>car number</th>
              <th>reason</th>
              <th>total</th>
            </tr>
          </thead>
          <tr ng-cloak ng-repeat="ticket in tickets">
            <td>{{ticket.date}}</td>
            <td>{{ticket.name}}</td>
            <td>{{ticket.number}}</td>
            <td>{{ticket.car}}</td>
            <td>{{ticket.reason}}</td>
            <td>{{ticket.total}} &#8362</td>
          </tr>
        </table>
      </div><!-- /.span8 -->
      
    </div><!-- /row -->
      
    
    
  </div><!-- /container -->

  <script src="http://maps.googleapis.com/maps/api/js?key=AIzaSyBGUGKbU4YhFQUEPwLav9kjaJ2INfJYFQA&sensor=false&language=en"></script>
  <script src="js/angular.min.js"></script>
  <script src="https://cdn.firebase.com/v0/firebase.js"></script>
  <script src="js/angularFire.js"></script>
  <script src="js/angular-google-maps.js"></script>
  <script src="js/app.js"></script>
</body>
</html>
